@page
@model Notion.Client.Pages.Notions.EditNotionModel

<h3>Редактирование заметки</h3>

<form method="post">
    <div class="form-group" hidden>
        <label asp-for="NotionId">Текст заметки</label>
        <textarea asp-for="NotionId" class="form-control" rows="5" required></textarea>
    </div>

    <div class="form-group">
        <label asp-for="NotionText">Текст заметки</label>
        <textarea asp-for="NotionText" class="form-control" rows="5" required></textarea>
    </div>

    <div class="form-check mt-3">
        <input asp-for="NotionIsCompleted" type="checkbox" class="form-check-input" />
        <label asp-for="NotionIsCompleted" class="form-check-label">Выполнено</label>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-page="/Notions/MyNotions" class="btn btn-secondary">Отмена</a>
    </div>
</form>
